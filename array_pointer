#include<iostream>
using namespace std;
int main()
{
	int num1=0,num2=0,num3=0,num4=0,num5=0;
	int array[5] = { num1,num2,num3,num4,num5 };
	int* ptr=array;

	cout << "please enter the first number\n";
	cin >> *ptr;
	cout << "please enter the secondnumber\n";
	cin >> *(ptr + 1);                                //matensee4 elaqwas() hena
	cout << "please enter the third number\n";
	cin >> *(ptr + 2);
	cout << "please enter the fourth number\n";
	cin >> *(ptr + 3);
	cout << "please enter the fifth number\n";
	cin >> *(ptr + 4);

	cout << "the first number in the array is " << *ptr <<endl;
	cout << "the second number in the array is " << *ptr+1 << endl;
	cout << "the third number in the array is " << *ptr +2<< endl;
	cout << "the fourth number in the array is " << *ptr+3 << endl;
	cout << "the fifth number in the array is " << *ptr+4 << endl;

	system("pause");
	return 0;
}
